<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#78D2C8"
    android:padding="10dp"
    tools:context=".fragments.owner.StaffDetails">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/f_o_sd_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:contentDescription="Profile Image"
            app:layout_constraintBottom_toTopOf="@+id/f_o_sd_emaillabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_profile" />

        <TextView
            android:id="@+id/f_o_sd_emaillabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Email Address"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/f_o_sd_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_image" />

        <TextView
            android:id="@+id/f_o_sd_email"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:inputType="textCapWords"
            android:padding="5dp"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/f_o_sd_namelabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_emaillabel"
            app:layout_wrapBehaviorInParent="horizontal_only" />

        <TextView
            android:id="@+id/f_o_sd_namelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Full Name"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/f_o_sd_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_email" />

        <TextView
            android:id="@+id/f_o_sd_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:inputType="textCapWords"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/f_o_sd_unamelabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_namelabel"
            app:layout_wrapBehaviorInParent="horizontal_only" />

        <TextView
            android:id="@+id/f_o_sd_unamelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Username"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/f_o_sd_uname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_name" />

        <TextView
            android:id="@+id/f_o_sd_uname"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:inputType="textCapWords"
            android:padding="5dp"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/f_o_sd_age_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_unamelabel"
            app:layout_wrapBehaviorInParent="horizontal_only" />

        <TextView
            android:id="@+id/f_o_sd_age"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:inputType="textCapWords"
            android:padding="5dp"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_age_label"
            app:layout_wrapBehaviorInParent="horizontal_only" />

        <TextView
            android:id="@+id/f_o_sd_age_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Age"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/f_o_sd_age"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_uname" />

        <TextView
            android:id="@+id/f_o_sd_hd_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Hired Datetime"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/f_o_sd_hd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_age" />

        <TextView
            android:id="@+id/f_o_sd_contactlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Mobile/Telephone Number"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/f_o_sd_contact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_hd" />

        <TextView
            android:id="@+id/f_o_sd_contact"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:inputType="textCapWords"
            android:padding="5dp"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_contactlabel"
            app:layout_wrapBehaviorInParent="horizontal_only" />

        <TextView
            android:id="@+id/f_o_sd_contactlabel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Email Address"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/f_o_sd_contact2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_contact" />

        <TextView
            android:id="@+id/f_o_sd_contact2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:inputType="textCapWords"
            android:padding="5dp"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/staff_item_remove"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_contactlabel2"
            app:layout_wrapBehaviorInParent="horizontal_only" />

        <TextView
            android:id="@+id/f_o_sd_hd"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:inputType="textCapWords"
            android:padding="5dp"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/f_o_sd_contactlabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_hd_label"
            app:layout_wrapBehaviorInParent="horizontal_only" />

        <Button
            android:id="@+id/staff_item_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:drawableTop="@drawable/ic_staff_remove"
            android:text="Remove"
            app:backgroundTint="#F44336"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/staff_item_toggle_status"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_contact2" />

        <Button
            android:id="@+id/staff_item_toggle_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:drawableTop="@drawable/ic_disable"
            android:drawableTint="@color/white"
            android:text="Disable"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/staff_item_remove"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_o_sd_contact2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
